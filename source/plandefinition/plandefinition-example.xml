          <type value="justification"/>
          <document>
            <extension url="http://hl7.org/fhir/StructureDefinition/cqif-qualityOfEvidence">
			  <valueCodeableConcept>
			    <coding>
			      <system value="http://hl7.org/fhir/evidence-quality"/>
			      <code value="high"/>
			    </coding>
			    <text value="High Quality"/>
			  </valueCodeableConcept>
