<ValueSet xmlns="http://hl7.org/fhir"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://hl7.org/fhir ../../schema/valueset.xsd">
	<name value="ServiceDeliveryLocation key value set"/>
	<publisher value="HSPC"/>
	<contact>
		<telecom>
			<system value="url"/>
			<value value="http://healthcaresoa.org"/>
		</telecom>
	</contact>
	<description value="This value set defines the set of codes used to identify the service delivery location."/>
	<status value="draft"/>
	<compose>
		<include>
			<system value="http://hl7.org/fhir/v3/vs/EntityCode"/>
			<caseSensitive value="true"/>
			<concept>
				<code value="WING"/>
				<display value="Wing Location"/>
				<definition value="A Wing within a Building, this often contains levels, rooms and corridors."/>
			</concept>
			<concept>
				<code value="ROOM"/>
				<display value="Room Location"/>
				<definition value="A space that is allocated as a room, it may have walls/roof etc, but does not require these"/>
			</concept>
			<concept>
				<code value="BED"/>
				<display value="Bed Location"/>
				<definition value="A space that is allocated for sleeping/laying on"/>
			</concept>
		</include>
	</compose>
	<define>
		<concept>
			<code value = "Facility"/>
			<display value ="Facility"/>
			<definition value ="A location that is categorized by the nursing skill, specialty, or type of care delivered"/>
		</concept>
	</define>
</ValueSet>


