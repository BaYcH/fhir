      </contains>
    </contains>

    <!-- #2a processing -->
    <contains>
      <system value="http://hl7.org/fhir/hacked"/>
      <code value="processing"/> 
      <display value="Processing Failure"/> 
      <contains>
        <system value="http://hl7.org/fhir/hacked"/>
        <code value="duplicate"/> 
